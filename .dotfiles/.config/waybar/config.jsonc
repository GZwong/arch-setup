// -*- mode: jsonc -*-
// See https://man.archlinux.org/man/waybar.5
[
  {
    "name": "bar",
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 30,    // Waybar height (to be removed for auto height)
    // "width": 1280,   // Waybar width - remove for full screen width
    "margin": "5 20 0 20",
    "exclusive": true, // Whether waybar has exclusive space (no overlap with windows)

    // Choose the order of the modules
    "modules-left": [
      "custom/power",
      "clock",
      "hyprland/language",
      "keyboard-state",
      "custom/spotify"
    ],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": [
      "pulseaudio",
      "backlight",
      "power-profiles-daemon",
      "cpu",
      "memory",
      "temperature",
      "battery",
      "custom/notifications",
      "tray" // Any apps running using XEmbed tray protocol
    ],
    "unused-modules": [
      "hyprland/window",
      "battery#bat2",
      "network",
      "idle_inhibitor",
      "mpd", // Music Player Daemon
      "custom/media"
    ],
    // Modules configuration
    "hyprland/window": {
      "format": "{title}",
      "format-icons": {
        "floating": "Ôãê",
        "fullscreen": "‚õ∂",
        "sticky": "Ôâ©",
        "maximized": "üóñ",
        "minimized": "üóï"
      },
      "expand": true,
      "rewrite": {
        "(.*) ‚Äî Mozilla Firefox": "<span color='#FF7139'>Ôâ©</span>  $1", // em-dash, not regular dash
        "(.*) - (.*) - Visual Studio Code": "Code - $1"
      },
      "on-click": "hyprctl dispatch window next" // Click to switch to next window
      // "on-scroll-up": "hyprctl dispatch window next",
      // "on-scroll-down": "hyprctl dispatch window prev"
    },
    "hyprland/workspaces": {
      "format": "{id}",
      "on-click": "hyprctl dispatch workspace next", // Click to switch to next workspace
      "on-scroll-up": "hyprctl dispatch workspace next",
      "on-scroll-down": "hyprctl dispatch workspace prev"
    },
    //   "hyprland/workspaces": {
    //     "format": "{windows}",
    //     "window-rewrite-default": "ÔÅô",
    //     "window-rewrite": {
    //       "class<firefox>": "Ôâ©",
    //       "class<Code>": "Û∞®û",
    //       "title<.*YouTube.*>": "ÔÖ™",
    //       "class<Firefox> title<.*github.*>": "ÔÑì",
    //       "class<Alacritty>": "Ó™Ö",
    //       "class<Spotify>": "ÔÜº"
    //     },
    //     "on-click": "hyprctl dispatch workspace next" // Click to switch to next workspace
    //   },
    "keyboard-state": {
      // "exec": "~/capslock.sh",
      "numslock": false,
      "capslock": true,
      "format": "{name} {icon} ",
      "format-icons": {
        "locked": "ÔÄ£",
        "unlocked": "ÔÇú"
      },
      // Setting device path increase responsiveness - no need to search for device
      // Search for device: `libinput list-devices`
      "device-path": "/dev/input/event11" // Path to the keyboard device
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10
    },
    "clock": {
      // "timezone": "America/New_York",
      "format": "{:%A, %d %B %Y %H:%M}",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format-alt": "{:%A, %d %B %Y %H:%M}",
      "calendar": {
        "format": {
          // "months": "<span color='#ffead3'><b>{}</b></span>",
          // "today": "<span color='#ff6699'><b>{}</b></span>"
        }
      }
    },
    "cpu": {
      "format": "{usage}% Ôãõ",
      "tooltip": false
    },
    "memory": {
      "format": "{}% ÔÉâ"
    },
    "temperature": {
      // "thermal-zone": 2,
      // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
      "critical-threshold": 80,
      // "format-critical": "{temperatureC}¬∞C {icon}",
      "format": "{temperatureC}¬∞C {icon}",
      "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "backlight": {
      "device": "intel_backlight", // Stored in /sys/class/backlight/
      "format": "{percent}% {icon}",
      "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
      "states": {
        "full": 100,
        "good": 80,
        "warning": 30,
        "critical": 15
      },
      "format": "{capacity}% {icon}",
      "format-full": "{capacity}% {icon}",
      "format-charging": "{capacity}% Ôóß",
      "format-plugged": "{capacity}% Ôá¶",
      "format-good": "", // An empty format will hide the module
      "format-alt": "{time} {icon}",
      "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat2": {
      "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
      // "interface": "wlp2*", // (Optional) To force the use of this interface
      "format-wifi": "Ôá´",
      "format-ethernet": "Ôûñ",
      // "format-linked": "{ifname} (No IP) Ôûñ",
      "format-linked": "Ôûñ",
      "format-disconnected": "Disconnected ‚ö†",
      // "format-alt": "{ifname}: {ipaddr}/{cidr}"
      "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
      "format-alt": "{essid} ({signalStrength}%)"
    },
    "pulseaudio": {
      // "scroll-step": 1, // %, can be a float
      "format": "{icon}   {volume}% {format_source}",
      "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
      "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
      "format-muted": "Ôö© {format_source}",
      "format-source": "ÔÑ∞ {volume}%",
      "format-source-muted": "ÔÑ±",
      "format-icons": {
        "headphone": "ÔÄ•",
        "hands-free": "Ôñê",
        "headset": "Ôñê",
        "phone": "ÔÇï",
        "portable": "ÔÇï",
        "car": "ÔÜπ",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
      },
      "on-click": "pavucontrol"
    },
    "custom/media": {
      "format": "{icon} {text}",
      "return-type": "json",
      "max-length": 40,
      "format-icons": {
        "spotify": "ÔÜº",
        "default": "üéú"
      },
      "escape": true,
      "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
      // "exec": "playerctl metadata --format '{{playerName}} {{title}}' | grep spotify || echo ''" // Use playerctl to get Spotify metadata
      // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/spotify": {
      "format": "{}  ÔÜº",
      "tooltip": true,
      "tooltip-format": "{}",
      "max-length": 40,
      "return-type": "json",
      // Media player script to get Spotify metadata (ran in a loop to update) -
      // require python-gobject library
      "exec": "/usr/bin/python3 ~/.config/waybar/scripts/mediaplayer.py --player spotify",
      // Custom command to get Spotify metadata but does not update when spotify opens/closes
      // "exec": "playerctl metadata --format '{{artist}} - {{title}}' --player=spotify 2>/dev/null",
      "on-click": "playerctl play-pause --player=spotify",
      "on-scroll-up": "playerctl next --player=spotify",
      "on-scroll-down": "playerctl previous --player=spotify"
    },
    "custom/notifications": {
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t",
      "tooltip": false,
      "return-type": "json",
      "format": "üîî {}"
    },
    "custom/power": {
      "format": "‚èª",
      "tooltip": false,
      "menu": "on-click",
      "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
      "menu-actions": {
        "shutdown": "systemctl poweroff",
        "reboot": "systemctl reboot",
        "suspend": "systemctl suspend",
        "hibernate": "systemctl hibernate"
      }
    }
  }
  // {
